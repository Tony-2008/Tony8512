// Script para interactuar con el usuario
document.getElementById('greetButton').addEventListener('click', function() {
    alert("¡Hola, bienvenido a la plataforma!");
});
name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main   # Este flujo se ejecuta cuando haces un push a la rama principal

jobs:
  deploy:
    runs-on: ubuntu-latest  # Usamos un entorno de Ubuntu para el despliegue

    steps:
    - name: Check out the repository
      uses: actions/checkout@v3

    - name: Set up Node.js (si usas alguna herramienta de construcción, como Webpack)
      uses: actions/setup-node@v3
      with:
        node-version: '16'

    - name: Install dependencies
      run: npm install  # Si usas Node.js o algún gestor de dependencias

    - name: Build project (si usas un sistema de construcción)
      run: npm run build  # Si tienes un proceso de construcción como 'npm run build'

    - name: Deploy to GitHub Pages
      uses: JamesIves/github-pages-deploy-action@v4
      with:
        branch: gh-pages  # Usa la rama gh-pages para GitHub Pages
        folder: build     # Aquí se coloca el contenido que se va a desplegar
        token: ${{ secrets.GITHUB_TOKEN }}  # Token de GitHub para autenticación

<body>

    <!-- Encabezado principal -->
    <header>
        <h1>La Voz del Estudiante</h1>
        <p>Tu plataforma para elegir, debatir y participar en la comunidad estudiantil.</p>
    </header>

    <!-- Barra de navegación -->
    <nav>
        <a href="#representantes">Representantes</a>
        <a href="#iniciativas">Iniciativas</a>
        <a href="#comunidad">Comunidad</a>
    </nav>

    <!-- Contenido principal -->
    <div class="container">

        <!-- Sección de Representantes -->
        <div id="representantes" class="card">
            <h2>Elegir Representantes</h2>
            <p>Vota por los estudiantes que mejor representen tus intereses en la comunidad estudiantil.</p>
            <button onclick="mostrarMensaje('Función de voto en desarrollo')">Votar ahora</button>
        </div>

        <!-- Sección de Iniciativas -->
        <div id="iniciativas" class="card">
            <h2>Votar por Iniciativas</h2>
            <p>Apoya las iniciativas que consideres importantes para la comunidad estudiantil.</p>
            <button onclick="mostrarMensaje('Función de iniciativas en desarrollo')">Ver Iniciativas</button>
        </div>

        <!-- Sección de Comunidad -->
        <div id="comunidad" class="card">
            <h2>Foro de Comunidad</h2>
            <p>Debate temas relevantes y comparte tus opiniones en el foro estudiantil.</p>
            <button onclick="abrirChat()">Ir al Foro</button>
        </div>

        <!-- Chat de la comunidad -->
        <div id="chat" style="display: none;">
            <h3>Chat de la Comunidad</h3>
            <div id="chat-messages" style="height: 200px; overflow-y: scroll; border: 1px solid #ddd; padding: 1em; margin-bottom: 1em;">
                <!-- Mensajes del chat se mostrarán aquí -->
            </div>
            <input type="text" id="chat-input" placeholder="Escribe un mensaje..." onkeypress="enviarMensaje(event)">
        </div>

    </div>

    <script>
        // Función para mostrar mensajes emergentes
        function mostrarMensaje(mensaje) {
            alert(mensaje);
        }

        // Función para abrir el chat
        function abrirChat() {
            document.getElementById("chat").style.display = "block";
        }

        // Función para enviar mensajes en el chat
        function enviarMensaje(event) {
            if (event.key === "Enter") {
                let mensaje = document.getElementById("chat-input").value;
                if (mensaje.trim() !== "") {
                    let chatMessages = document.getElementById("chat-messages");
                    let nuevoMensaje = document.createElement("p");
                    nuevoMensaje.textContent = mensaje;
                    chatMessages.appendChild(nuevoMensaje);
                    document.getElementById("chat-input").value = "";
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }
            }
        }
    </script>

